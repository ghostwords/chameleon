{
	"manifest_version": 2,
	"name": "Chameleon",
	"version": "0.7.0",

	"default_locale": "en",
	"description": "Browser fingerprinting protection for everybody.",
	"icons": {
		"16": "icons/16.png",
		"48": "icons/48.png",
		"128": "icons/128.png"
	},

	"browser_action": {
		"default_icon": {
			"19": "icons/19_off.png",
			"38": "icons/38_off.png"
		},
		"default_title": "Chameleon",
		"default_popup": "html/panel.html"
	},

	"author": "ghostwords",
	"background": {
		"scripts": [
			"js/builds/common.js",
			"js/builds/background.js"
		]
	},
	"content_scripts": [
		{
			"all_frames": true,
			"js": [
				"js/builds/inject.min.js"
			],
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"run_at": "document_start"
		}
	],
	"homepage_url": "https://github.com/ghostwords/chameleon",
	"minimum_chrome_version": "33",
	"permissions": [
		"http://*/*",
		"https://*/*",
		"tabs",
		"webNavigation",
		"webRequest",
		"webRequestBlocking"
	],
	"web_accessible_resources": [
		"js/builds/injected.min.js"
	]
}
